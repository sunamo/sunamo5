<UserControl x:Class="desktop.Controls.SelectImageFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="tbSelectedFile"></TextBlock>
        <Button x:Name="btnSelectFile" Click="btnSelectFile_Click" Content="Select file"></Button>
    </StackPanel>
</UserControl>
