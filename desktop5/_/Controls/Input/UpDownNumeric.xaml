<UserControl
    x:Class="desktop.UpDownNumeric"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30">

    <StackPanel Orientation="Horizontal">
        <Button Name="btnDecrement" Click="btnDecrement_Click_1">
            <Button.Content>
                <TextBlock FontWeight="Bold" Text="-"></TextBlock>
            </Button.Content>
        </Button>
        
        <!--Mode=TwoWay, -->
        <TextBox Name="txtValue" TextChanged="txtValue_TextChanged_1" HorizontalContentAlignment="Center"></TextBox>
        <!--Text="{Binding Path=Value, Converter={StaticResource ResourceKey=StringDoubleConverterInstance}}"-->
        <Button Name="btnIncrement" Click="btnIncrement_Click_1">
            <Button.Content>
                <TextBlock FontWeight="Bold" Text="+"></TextBlock>
            </Button.Content>
        </Button>
        <!---->
                        
                        <!---->
    </StackPanel>
</UserControl>
